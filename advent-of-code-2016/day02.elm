type Direction
    = Up
    | Down
    | Left
    | Right


keyPad =
    Array.fromList
        [ Array.fromList [ Nothing, Nothing, Just "1", Nothing, Nothing ]
        , Array.fromList [ Nothing, Just "2", Just "3", Just "4", Nothing ]
        , Array.fromList [ Just "5", Just "6", Just "7", Just "8", Just "9" ]
        , Array.fromList [ Nothing, Just "A", Just "B", Just "C", Nothing ]
        , Array.fromList [ Nothing, Nothing, Just "D", Nothing, Nothing ]
        ]


type alias Position =
    ( Int, Int )


button : Position -> Maybe String
button ( row, col ) =
    Array.get row keyPad
        |> Maybe.andThen (Array.get col)
        |> Maybe.withDefault Nothing


move : Direction -> Position -> Position
move direction ( row, col ) =
    let
        target =
            case direction of
                Up ->
                    ( row - 1, col )

                Down ->
                    ( row + 1, col )

                Left ->
                    ( row, col - 1 )

                Right ->
                    ( row, col + 1 )

        targetButton =
            button target
    in
        case targetButton of
            Just button ->
                target

            Nothing ->
                ( row, col )


moveLine : List Direction -> Position -> Position
moveLine directions start =
    List.foldl move start directions


parseChar : Char -> Maybe Direction
parseChar char =
    case char of
        'U' ->
            Just Up

        'D' ->
            Just Down

        'L' ->
            Just Left

        'R' ->
            Just Right

        _ ->
            Nothing


parseLine : String -> List Direction
parseLine str =
    String.toList str |> List.filterMap parseChar


parseInstructions : String -> List (List Direction)
parseInstructions str =
    String.lines str
        |> List.map parseLine


startPosition =
    ( 1, 1 )


linePositions : List (List Direction) -> List Position
linePositions lines =
    List.scanl moveLine startPosition lines


code : List (List Direction) -> List String
code lines =
    log "positions " (linePositions lines)
        |> List.filterMap button
        |> List.tail
        |> Maybe.withDefault []


