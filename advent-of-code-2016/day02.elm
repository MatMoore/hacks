module Da02 exposing (..)

import Html exposing (..)
import Array exposing (..)


input =
    "\\\\"


type Direction
    = Up
    | Down
    | Left
    | Right


keyPad =
    Array.fromList
        [ Array.fromList [ 1, 2, 3 ]
        , Array.fromList [ 4, 5, 6 ]
        , Array.fromList [ 7, 8, 9 ]
        ]


type alias Position =
    ( Int, Int )


button : Position -> Maybe Int
button ( row, col ) =
    Array.get col keyPad
        |> Maybe.andThen (Array.get row)


move : Direction -> Maybe Position -> Maybe Position
move direction start =
    let
        target ( row, col ) =
            case direction of
                Up ->
                    ( row - 1, col )

                Down ->
                    ( row + 1, col )

                Left ->
                    ( row, col - 1 )

                Right ->
                    ( row, col + 1 )

        end =
            Maybe.map target start

        targetButton =
            Maybe.map button end
    in
        case targetButton of
            Just button ->
                end

            Nothing ->
                Nothing


moveLine : List Direction -> Position -> Position
moveLine directions start =
    List.foldl move (Just start) directions
        |> Maybe.withDefault start


parseChar : Char -> Maybe Direction
parseChar char =
    case char of
        'U' ->
            Just Up

        'D' ->
            Just Down

        'L' ->
            Just Left

        'R' ->
            Just Right

        _ ->
            Nothing


parseLine : String -> List Direction
parseLine str =
    String.toList str |> List.filterMap parseChar


parseInstructions : String -> List (List Direction)
parseInstructions str =
    String.lines str
        |> List.map parseLine


startPosition =
    ( 1, 1 )


linePositions : List (List Direction) -> List Position
linePositions lines =
    List.scanl moveLine startPosition lines


code : List (List Direction) -> List Int
code lines =
    linePositions lines
        |> List.filterMap button


update msg model =
    model


part1 =
    parseInstructions input
        |> code
        |> List.map toString
        |> String.join ""


main =
    Html.beginnerProgram { model = part1, view = text, update = update }
